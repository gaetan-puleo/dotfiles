name: tests-installations
on: [push]
jobs:
  install: 
    runs-on: ubuntu-20.04
    steps:
      - run: sudo apt-get update
        shell: bash
      - run: sudo apt-get install ubuntu-desktop --no-install-recommends 
        shell: bash
      - uses: actions/checkout@v2
      - name: Run headless test
        uses: GabrielBB/xvfb-action@v1
        with:
          run: bash "${GITHUB_WORKSPACE}/ubuntu/install.bash"
          shell: bash
      - run: bash "${GITHUB_WORKSPACE}/tests/checkhealth/ubuntu.bash"
        shell: bash

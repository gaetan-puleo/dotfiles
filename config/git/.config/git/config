[init]
	defaultBranch = main
[alias]
    alias = ! git config --get-regexp ^alias\\. | sed -e s/^alias\\.// -e s/\\ /\\ =\\ /
    co = checkout
    rs = reset
    l = log
    lo = log --oneline
    fa = fetch --all -p
    st = status
    cm = commit -m
    oups = commit --amend --no-edit
[core]
	editor = nvim
[push]
    autoSetupRemote = true
[include]
	path = ~/.config/git/config.local
[diff]
    tool = kitty
    guitool = kitty.gui
[difftool]
    prompt = false
    trustExitCode = true
[difftool "kitty"]
    cmd = kitten diff $LOCAL $REMOTE
[difftool "kitty.gui"]
    cmd = kitten diff $LOCAL $REMOTE
